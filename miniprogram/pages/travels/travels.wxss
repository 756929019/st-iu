/* pages/travels/travels.wxss */
.flex-panel{height: 100%;padding: 2rpx;overflow-x: hidden;}

.flex-list{
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  align-content:center;
  justify-content:space-around;
}
 

.flex-list .flex-box-1{
  width:98vw;
  height: 330rpx;
  text-align: center;
  margin-left:1vw; 
  margin-right:1vw; 
  margin-top: 3rpx;
  margin-bottom: 10rpx;
  border-radius:5px; 
  background-position: center center;
  background-size: cover;
  position: relative;
}
.flex-list .flex-box-1 .flex-box-txt-top{
  background-color:rgba(0,0,0,0.4);
  color: white;
  top: 10rpx;
  width: 100%;
  position:absolute;
  text-align: left;
}
.flex-list .flex-box-1 .flex-box-txt{
  background-color:rgba(0,0,0,0.4);
  color: white;
  bottom: 10rpx;
  width: 100%;
  position:absolute;
  text-align: left;
}

.flex-list .flex-box-1 .box-title{
  color: white;
  font-size: 16px;
  margin-left: 20rpx;
  line-height: 20rpx;
  margin-top: 10rpx;
  width: 100%;
  float: left;
}
.flex-list .flex-box-1 .box-time{
  color: white;
  font-size: 11px;
  line-height: 8rpx;
  margin-left: 20rpx;
  margin-top: -10rpx;
}
.flex-list .flex-box-1 .box-user{
  color: white;
  font-size: 11px;
  line-height: 8rpx;
  margin-left: 20rpx;
}
.flex-list .flex-box-1 .box-user-img{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-top: 5rpx;
  float: left;
  border-radius:40rpx; 
}

.post-view
{ width: 100%;
  text-align: center;
  position: fixed;
  bottom: 0;
  right: 0;
  }
.add-btn-view{
  width: 100%;
  text-align: center;
  position: fixed;
  bottom: 0;
  right: 0;
}
.post {
    background-color: #ffffff;
    z-index: 1000;
    border: 1 solid #ffffff;
    border-radius: 120rpx;
    height: 120rpx;
    width: 120rpx;
    margin: 10rpx auto;
    box-shadow: 1px #cccccc;
    
}
.post image{
    height: 120rpx;
    width: 120rpx;
}

.post_image{
  transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
}
.rotatePost{
  transform: rotate(45deg); 
}

@keyframes slidedown {
    from {
        transform: translateY(0);
    }
    to {
        transform: translateY(100%);
    }
}
.slidedown {
    animation: slidedown 0.2s linear ;
}
.slideup {
    animation: slideup 0.2s linear ;
}
@keyframes slideup {
    from {
        transform: translateY(100%);
    }
    to {
        transform: translateY(0);
    }
}
.list-fix
{
  background-color:rgba(0,0,0,0.2);
  position: static;
  width: 100%;
  height: 100%;
  z-index:999;
}
.in-list{
  position: absolute;
  background-color: #ffffff;
  bottom:130rpx;
  margin: 0 auto;
  left: 50%;
  margin-left: -60rpx;
  width: 120rpx;
  border: 1 solid #ffffff;
  border-radius: 120rpx;
}
.in-btn{
width: 120rpx;
height: 120rpx;
}
